@{
    ViewData["Title"] = "Register";
}

<style>
    /* Container */
    .register-container {
        width: 420px;
        margin: 70px auto;
        padding: 35px;
        background: white;
        border-radius: 20px;
        border-top: 8px solid #e67e22; /* orange */
        border-bottom: 8px solid #2ecc71; /* green */
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        animation: slideUp 0.6s ease;
    }

        /* Title */
        .register-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #e67e22;
            font-weight: 700;
            letter-spacing: 1px;
        }

        /* Form groups */
        .register-container .form-group {
            margin-bottom: 18px;
        }

            .register-container .form-group label {
                display: block;
                margin-bottom: 6px;
                font-weight: 500;
                color: #444;
            }

            .register-container .form-group input {
                width: 100%;
                padding: 12px;
                border-radius: 12px;
                border: 1px solid #bbb;
                font-size: 15px;
                transition: 0.25s ease;
            }

                .register-container .form-group input:focus {
                    border-color: #e67e22;
                    box-shadow: 0 0 7px rgba(230, 126, 34, 0.4);
                    outline: none;
                }

    /* Button */
    .btn-register {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #e67e22, #2ecc71);
        color: white;
        font-size: 17px;
        font-weight: 600;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        margin-top: 10px;
        transition: 0.3s ease;
    }

        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(46,204,113,0.35);
        }

    /* Login link */
    .link-login {
        text-align: center;
        margin-top: 18px;
    }

        .link-login a {
            color: #2ecc71;
            font-weight: bold;
            text-decoration: none;
        }

            .link-login a:hover {
                text-decoration: underline;
            }

    /* Animations */
    @@keyframes slideUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="register-container">

    <h2>Créer un Compte</h2>

    <form asp-action="Register" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label>Nom complet :</label>
            <input type="text" name="FullName" required />
        </div>

        <div class="form-group">
            <label>Email :</label>
            <input type="email" name="Email" required />
        </div>

        <div class="form-group">
            <label>Mot de passe :</label>
            <input type="password" name="Password" required />
        </div>

        <button class="btn-register">Créer un compte</button>

        <div class="link-login">
            <p>Déjà inscrit ? <a asp-action="Login">Se connecter</a></p>
        </div>
    </form>

</div>
