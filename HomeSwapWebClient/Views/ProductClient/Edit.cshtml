@model HomeSwapWebClient.Models.ProductClient

@{
    ViewData["Title"] = "Edit Product";
}

<style>
    body {
        background: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .edit-container {
        max-width: 600px;
        margin: 40px auto;
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.08);
    }

    h1 {
        text-align: center;
        color: #333;
        margin-bottom: 25px;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #555;
    }

    input.form-control, textarea.form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        outline: none;
        transition: 0.3s;
    }

        input.form-control:focus, textarea.form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 6px rgba(40,167,69,0.2);
        }

    .btn-save {
        background: linear-gradient(90deg, #28a745, #ff7f50);
        color: #fff;
        padding: 10px 18px;
        border-radius: 10px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
        width: 100%;
    }

        .btn-save:hover {
            background: linear-gradient(90deg, #28a745, #ff7f50);
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #007bff;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 4px;
    }
</style>

<div class="edit-container">
    <h1>Modifier le produit</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Condition"></label>
            <input asp-for="Condition" class="form-control" />
            <span asp-validation-for="Condition" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImagePath"></label>
            <input asp-for="ImagePath" class="form-control" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Enregistrer" class="btn-save" />
        </div>
    </form>

    <a asp-action="Index" class="back-link">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
