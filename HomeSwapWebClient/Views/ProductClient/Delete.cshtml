@model HomeSwapWebClient.Models.ProductClient

@{
    ViewData["Title"] = "Delete Product";
}

<style>
    body {
        background: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .delete-container {
        max-width: 600px;
        margin: 40px auto;
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.08);
        text-align: center;
    }

    h1 {
        color: #c82333; /* Rouge sombre pour le titre Delete */
        margin-bottom: 20px;
        font-weight: 600;
    }

    h3 {
        color: #555;
        margin-bottom: 25px;
    }

    dl.row dt {
        font-weight: 600;
        color: #333;
    }

    dl.row dd {
        color: #555;
        margin-bottom: 10px;
    }

    .btn-delete {
        background: linear-gradient(90deg, #28a745, #ff7f50);
        color: #fff;
        padding: 10px 18px;
        border-radius: 10px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
        margin-right: 10px;
    }

        .btn-delete:hover {
            background-color: #a71d2a;
        }

    .back-link {
        display: inline-block;
        margin-top: 15px;
        color: #007bff;
        text-decoration: none;
        font-weight: 500;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    img.product-image {
        max-width: 100%;
        max-height: 250px;
        border-radius: 12px;
        margin-bottom: 20px;
        object-fit: cover;
    }
</style>

<div class="delete-container">
    <h1>Supprimer le produit</h1>
    <h3>Êtes-vous sûr de vouloir supprimer ce produit ?</h3>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" class="product-image" alt="Product Image" />
    }

    <dl class="row text-start">
        <dt class="col-sm-4">Titre :</dt>
        <dd class="col-sm-8">@Model.Title</dd>

        <dt class="col-sm-4">Description :</dt>
        <dd class="col-sm-8">@Model.Description</dd>

        <dt class="col-sm-4">Catégorie :</dt>
        <dd class="col-sm-8">@Model.Category</dd>

        <dt class="col-sm-4">État :</dt>
        <dd class="col-sm-8">@Model.Condition</dd>

        <dt class="col-sm-4">Ville :</dt>
        <dd class="col-sm-8">@Model.City</dd>

        <dt class="col-sm-4">Prix :</dt>
        <dd class="col-sm-8">@Model.Price €</dd>

        <dt class="col-sm-4">Date création :</dt>
        <dd class="col-sm-8">@Model.DateCreated.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Supprimer" class="btn-delete" />
        <a asp-action="Index" class="back-link">Retour à la liste</a>
    </form>
</div>

