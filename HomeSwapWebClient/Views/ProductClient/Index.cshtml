@model IEnumerable<HomeSwapWebClient.Models.ProductClient>

@{
    ViewData["Title"] = "Produits";
}
<style>
    /* Header */
    .product-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 30px 0;
    }

        .product-header h1 {
            color: #2ecc71;
            font-weight: 700;
        }

    .btn-add {
        padding: 12px 20px;
        background: linear-gradient(135deg, #e67e22, #2ecc71);
        color: white;
        font-weight: 600;
        border-radius: 10px;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-add:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(46, 204, 113, 0.4);
        }

    /* GRID */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 25px;
    }

    /* Product Card */
    .product-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        transition: 0.3s ease;
        border-top: 5px solid #e67e22;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.18);
        }

    /* Image */
    .product-image {
        width: 100%;
        height: 200px;
        overflow: hidden;
        background: #f2f2f2;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Product Info */
    .product-info {
        padding: 18px;
    }

        .product-info h3 {
            margin: 0;
            color: #e67e22;
        }

        .product-info .desc {
            font-size: 14px;
            color: #555;
            margin: 8px 0 12px;
        }

    /* Meta Data */
    .product-meta {
        font-size: 14px;
        color: #333;
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    /* Buttons */
    .product-actions {
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

        .product-actions a {
            flex: 1;
            text-align: center;
            padding: 8px 0;
            color: white;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: 0.3s;
        }

    .btn-details {
        background: #2ecc71;
    }

    .btn-edit {
        background: #f39c12;
    }

    .btn-delete {
        background: #e74c3c;
    }

    .product-actions a:hover {
        opacity: 0.8;
        transform: scale(1.05);
    }

</style>

<div class="product-header">
    <h1>Liste des Produits</h1>
    <a class="btn-add" asp-action="Create">+ Ajouter un produit</a>
</div>

<div class="product-grid">
    @foreach (var item in Model)
    {
        <div class="product-card">

            <div class="product-image">
    @if (!string.IsNullOrEmpty(item.ImagePath))
    {
        <img src="https://localhost:7122/uploads/@item.ImagePath" alt="@item.Title" />
    }
    else
    {
        <img src="/uploads/no-image.png" alt="Aucune image" />
    }
</div>

            <div class="product-info">
                <h3>@item.Title</h3>
                <p class="desc">@item.Description</p>

                <div class="product-meta">
                    <span><strong>Catégorie:</strong> @item.Category</span>
                    <span><strong>État:</strong> @item.Condition</span>
                    <span><strong>Ville:</strong> @item.City</span>
                    <span><strong>Prix:</strong> @item.Price DT</span>
                </div>

                <div class="product-actions">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-details">Détails</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">Supprimer</a>
                </div>
            </div>

        </div> <!-- FIN product-card -->
    }
</div> <!-- FIN grid -->

